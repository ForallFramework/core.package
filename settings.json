{
  
  //The default time-zone to use when the server is not configured.
  "defaultTimezone": "Europe/London",
  
  //Whether to use the above time-zone even if the server has one set already.
  "overrideServerTimezone": false,
  
  //The root directory of the parent project, relative to this package root.
  "projectRootDirectory": "../../../",
  
  //The directory which contains the packages, relative to the root.
  "vendorDirectory": "vendor/",
  
  //An array of Forall package names which will be used for loading those packages before
  //any others, in the order provided.
  "packageLoadOrder": ["core", "debug"]
  
}
